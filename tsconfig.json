{
  "compilerOptions": {
    "target": "es2015", // Updated from es5 to es2015 for better compatibility
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "downlevelIteration": true, // Added to support iteration over Sets and other iterables
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"]
}
